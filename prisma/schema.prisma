// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  user         String        @unique
  password     String
  name         String
  cpf          String
  telefone     String
  email        String        @unique
  role         String
  refreshToken RefreshToken?

  @@map("user")
}

model RefreshToken {
  id       String @id @default(uuid())
  expireIn Int
  userId   Int    @unique
  user     User   @relation(fields: [userId], references: [id])

  @@map("refresh_token")
}

model Desk {
  id          Int     @id @default(autoincrement())
  description String
  Order       Order[]

  @@map("desk")
}

model Order {
  id          Int    @id @default(autoincrement())
  status      String
  description String
  deskId      Int
  desk        Desk   @relation(fields: [deskId], references: [id])

  @@map("order")
}
