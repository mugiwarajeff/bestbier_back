// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  user         String        @unique
  password     String
  name         String
  cpf          String
  telefone     String
  email        String        @unique
  role         String
  refreshToken RefreshToken?

  @@map("user")
}

model RefreshToken {
  id       String @id @default(uuid())
  expireIn Int
  userId   Int    @unique
  user     User   @relation(fields: [userId], references: [id])

  @@map("refresh_token")
}

model Desk {
  id          Int     @id @default(autoincrement())
  description String
  available   Boolean
  Order       Order[]

  @@map("desk")
}

model Order {
  id          Int    @id @default(autoincrement())
  status      String
  description String
  deskId      Int
  desk        Desk   @relation(fields: [deskId], references: [id])
  itens       OrderItem[] 

  @@map("order")
}

model OrderItem {
  id  Int   @id @default(autoincrement())
  quatity Int
  orderId Int
  productId  Int
  Order Order @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
  @@map("orderItem")
}

model Product {
  id  Int   @id @default(autoincrement())
  name String
  description String
  category String
  price Decimal
  orderItens OrderItem[] 
  stock Stock?
  @@map("product")
}

model Stock {
  id  Int   @id @default(autoincrement())
  productId Int @unique
  product Product @relation(fields: [productId], references: [id])
  @@map("stock")
}
